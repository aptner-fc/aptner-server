files:
    "/sbin/appstart":
        mode: "000777"
        owner: ec2-user
        group: ec2-user
        content: |
            #!/usr/bin/env bash
            JAR_PATH=/var/app/current/application.jar

            # run app
            sudo java -Dspring.profiles.active=prod -Dfile.encoding=UTF-8 -jar $JAR_PATH